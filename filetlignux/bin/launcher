#!/bin/bash

declare -A MENU
MENU["*"]="dmenu_run -p > -m 0 -i -fn ${1} -nf ${2} -sf ${2} -nb ${3} -sb ${4}"
MENU["firefox"]="firefox"
MENU["nnn(files)"]="st nnn"
MENU["st(terminal)"]="st"
MENU["vlc"]="vlc"
# Add host specific launcher menu items in the following file:
[ -f ~/.config/filetlignuxlauncher ] && source ~/.config/filetlignuxlauncher

LAUNCH=$(printf "%s\n" "${!MENU[@]}" | sort -n | dmenu -p \> -m 0 -i\
 -fn ${1} -nf ${2} -sf ${2} -nb ${3} -sb ${4})
[ -n "$LAUNCH" ] && exec ${MENU[$LAUNCH]}
